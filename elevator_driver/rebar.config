{erl_opts, [debug_info]}.
{deps, []}.

{pre_hooks,
  [{"(linux|solaris)", compile, "make -C c_src"},
   {"(darwin)", compile, "make -C c_src"},
   {"(freebsd)", compile, "gmake -C c_src"}]}.
{post_hooks,
  [{"(linux|solaris)", clean, "make -C c_src clean"},
   {"(darwin)", clean, "make -C c_src clean"},
   {"(freebsd)", clean, "gmake -C c_src clean"}]}.